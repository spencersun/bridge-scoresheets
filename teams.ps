  (1500-1740)	(17)
  (1300-1490)	(16)
  (1100-1290)	(15)
  (900-1090)	(14)
  (750-890)	(13)
  (600-740)	(12)
  (500-590)     (11)
  (430-490)	(10)
  (370-420)	(9)
  (320-360)	(8)
  (270-310)	(7)
  (220-260) 	(6)
  (170-210) 	(5)
  (130-160) 	(4)
  (90-120) 	(3)
  (50-80) 	(2)
  (20-40) 	(1)
  24 impcolumn

  0 impcolumnbuffer neg translate
  20VPlabel 20VPtable VPcolumn

  0 impcolumnbuffer neg translate
  30VPlabel 30VPtable VPcolumn

  0 impcolumnbuffer neg translate
  dlrvulbox
grestore

gsave
titlefont setfont
